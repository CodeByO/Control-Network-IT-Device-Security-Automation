<?xml version="1.0"?>
<Plugin name="Session_timeout">
    <PluginVersion>1</PluginVersion>
    <PluginName>Session_timeout.xml</PluginName>
    <TargetOS>Linux</TargetOS>
    <Result_Type>info</Result_Type>
    <Info>Session Timeout 설정</Info>
    <Description>Session Timeout이 600초 (10분) 이하로 설정</Description>
    <Commands>
        <CommandCount>1</CommandCount>
        <Command>
            <CommandName>Session_timeout</CommandName>
            <CommandType>Bash</CommandType>
            <CommandString>echo 'export TMOUT=600' | sudo tee -a /etc/profile</CommandString>
        </Command>
    </Commands>
</Plugin>
