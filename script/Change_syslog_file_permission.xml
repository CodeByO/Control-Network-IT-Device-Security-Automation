<?xml version="1.0"?>
<Plugin name="Change_syslog_file_permission">
    <PluginVersion>1</PluginVersion>
    <PluginName>Change_syslog_file_permission.xml</PluginName>
    <TargetOS>Linux</TargetOS>
    <Result_Type>info</Result_Type>
    <Info>/etc/syslog.conf 파일 소유자 및 권한 설정</Info>
    <Description>/etc/syslog.conf 파일의 소유자를 root로, 권한을 644로 설정</Description>
    <Commands>
        <CommandCount>1</CommandCount>
        <Command>
            <CommandName>Change_syslog_file_permission</CommandName>
            <CommandType>Bash</CommandType>
            <CommandString>chown root /etc/syslog.conf && chmod 644 /etc/syslog.conf</CommandString>
        </Command>
    </Commands>
</Plugin>
