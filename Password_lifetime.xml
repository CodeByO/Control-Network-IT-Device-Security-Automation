<?xml version="1.0"?>
<Plugin name="Password_lifetime">
    <PluginVersion>1</PluginVersion>
    <PluginName>Password_lifetime.xml</PluginName>
    <TargetOS>Linux</TargetOS>
    <Result_Type>info</Result_Type>
    <Info>패스워드 최대 사용기간 설정</Info>
    <Description>패스워드 최대 사용기간을 90일 (12주) 이하로 설정</Description>
    <Commands>
        <CommandCount>1</CommandCount>
        <Command>
            <CommandName>Password_lifetime</CommandName>
            <CommandType>Bash</CommandType>
            <CommandString>sudo sed -i 's/^PASS_MAX_DAYS.*$/PASS_MAX_DAYS 90/' /etc/login.defs</CommandString>
        </Command>
    </Commands>
</Plugin>
