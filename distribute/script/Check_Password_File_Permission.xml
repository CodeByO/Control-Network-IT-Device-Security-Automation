<?xml version="1.0"?>
<Plugin name="Check_Password_File_Permission">
    <PluginVersion>1</PluginVersion>
    <PluginName>Check_Password_File_Permission.xml</PluginName>
    <TargetOS>Linux</TargetOS>
    <Result_Type>info</Result_Type>
    <Info>/etc/passwd 파일 소유자 및 권한 확인</Info>
    <Description>/etc/passwd 파일의 소유자가 root이고, 권한이 644인지 확인</Description>
    <Commands>
        <CommandCount>1</CommandCount>
        <Command>
            <CommandName>Check_Password_File_Permission</CommandName>
            <CommandType>Bash</CommandType>
            <CommandString>sudo sh -c 'ls -l /etc/passwd'</CommandString>
        </Command>
    </Commands>
</Plugin>
